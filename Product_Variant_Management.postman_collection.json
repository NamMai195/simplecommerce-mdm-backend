	"event": [
		{
			"listen": "test",
			"script": {
				"exec": [
					"// Test script for variant deletion",
					"pm.test(\"Status code is 200\", function () {",
					"    pm.response.to.have.status(200);",
					"});",
					"",
					"pm.test(\"Response has correct structure\", function () {",
					"    const jsonData = pm.response.json();",
					"    pm.expect(jsonData).to.have.property('statusCode');",
					"    pm.expect(jsonData).to.have.property('message');",
					"    pm.expect(jsonData).to.have.property('data');",
					"});",
					"",
					"// For variant deletion success",
					"if (pm.request.url.path.includes('/variants/')) {",
					"    pm.test(\"Variant deletion successful\", function () {",
					"        const jsonData = pm.response.json();",
					"        pm.expect(jsonData.message).to.include('deleted');",
					"    });",
					"}",
					"",
					"// For product retrieval",
					"if (pm.request.url.path.includes('/products/') && pm.request.method === 'GET') {",
					"    pm.test(\"Product has variants\", function () {",
					"        const jsonData = pm.response.json();",
					"        if (jsonData.data && jsonData.data.variants) {",
					"            pm.expect(jsonData.data.variants).to.be.an('array');",
					"            console.log('Product variants count:', jsonData.data.variants.length);",
					"        }",
					"    });",
					"}"
				],
				"type": "text/javascript"
			}
		}
