# ==============================================
# SimpleCommerce MDM Backend Environment Variables
# ==============================================

# Application Configuration
APP_VERSION=latest
SERVER_PORT=8080

# Database Configuration
PROD_DB_URL=jdbc:postgresql://localhost:5432/simplecommerce_mdm_prod
PROD_DB_USER=simplecommerce_user
PROD_DB_PASSWORD=your_secure_password_here
PROD_DB_NAME=simplecommerce_mdm_prod

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_minimum_64_characters_for_security_purposes
JWT_EXPIRATION=86400000  # 24 hours in milliseconds
JWT_REFRESH_EXPIRATION=604800000  # 7 days in milliseconds

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# Logging Configuration
LOG_FILE_PATH=/app/logs/simplecommerce-mdm.log

# External Services (if needed)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Monitoring Configuration
PROMETHEUS_ENABLED=true

# ==============================================
# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with actual values
# 3. Never commit .env file to version control
# 4. Use strong passwords and secrets
# ============================================== 