# DigitalOcean Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=simplecommerce_mdm
POSTGRES_USER=simplecommerce
POSTGRES_PASSWORD=your_secure_database_password_here

# Spring Database Connection (for Docker Compose)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/simplecommerce_mdm
SPRING_DATASOURCE_USERNAME=simplecommerce
SPRING_DATASOURCE_PASSWORD=your_secure_database_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long

# Google OAuth2 Configuration (for Google Login)
GOOGLE_CLIENT_ID=your_google_oauth2_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth2_client_secret_here

# Email Configuration (Brevo)
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=SimpleCommerce

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration
PORT=8080

# Spring Profile
SPRING_PROFILES_ACTIVE=digitalocean
